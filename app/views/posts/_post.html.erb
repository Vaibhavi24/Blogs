<li id="post-<%= p.id %>" class="post">
	<div class="post-content">
		<div class="text">
			<p >
				<%= p.content %>
			</p>
			<p class="author-details">
				<%= p.user.email%> at <%= p.created_at %>
			</p>
		</div>

		<p>
			<%= link_to "Like" , like_path(p.id), remote: true, method: :post %>
		</p>
